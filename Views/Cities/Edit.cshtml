@model HelloWorld.Models.City

@{
    ViewData["Title"] = "Edit City";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="Name">City Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
    </div>
    <div class="form-group">
        <label for="Country">Country</label>
        <input type="text" class="form-control" id="Country" name="Country" value="@Model.Country" required />
    </div>
    <div class="form-group">
        <label for="Population">Population</label>
        <input type="number" class="form-control" id="Population" name="Population" value="@Model.Population" required />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
